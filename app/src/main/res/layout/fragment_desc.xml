<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageholder"
            android:layout_width="240dp"
            android:layout_height="228dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="85dp"
            android:layout_gravity="center"
            android:src="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:text="Company Name: "
            android:layout_below="@id/imageholder"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/nameholder"
            android:text="Company Name"
            android:layout_toRightOf="@+id/name"
            android:layout_below="@id/imageholder"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/avrSal"
            android:text="Average Salary: "
            android:layout_below="@id/name"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/avrSalHolder"
            android:text="Average Salary"
            android:layout_toRightOf="@id/avrSal"
            android:layout_below="@id/name"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/Placements"
            android:text="Total Campus Placements: "
            android:layout_below="@id/avrSal"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/placements"
            android:text="Placements"
            android:layout_toRightOf="@id/Placements"
            android:layout_below="@id/avrSal"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/Trounds"
            android:text="Total Rounds: "
            android:layout_below="@id/Placements"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rounds"
            android:text="Rounds"
            android:layout_toRightOf="@id/Trounds"
            android:layout_below="@id/Placements"
            android:textSize="25sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/AQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Trounds"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:background="#009a9a"
            android:gravity="center_horizontal"
            android:letterSpacing="0.2"

            android:padding="16dp"
            android:text="Aptitiude Questions"
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:textStyle="bold"/>
